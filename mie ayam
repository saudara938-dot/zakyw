                    <i class="fa-solid fa-basket-shopping text-6xl mb-4 text-gray-200"></i>
                    <p>Keranjang masih kosong</p>
                    <p class="text-sm">Yuk pilih menu favoritmu!</p>
                    <button onclick="toggleCart()" class="mt-4 text-primary font-bold text-sm hover:underline">Kembali ke Menu</button>
                </div>
            </div>

            <div class="p-5 bg-gray-50 border-t border-gray-200">
                <div class="flex justify-between mb-4 text-lg font-bold text-dark">
                    <span>Total:</span>
                    <span id="cart-total">Rp 0</span>
                </div>
                <button onclick="checkoutWhatsApp()" class="w-full bg-green-500 hover:bg-green-600 text-white font-bold py-3 rounded-xl shadow-lg transition transform active:scale-95 flex justify-center items-center gap-2">
                    <i class="fa-brands fa-whatsapp text-xl"></i> Kirim Pesanan ke WA
                </button>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        // Init Animation
        AOS.init({
            once: true,
            offset: 100,
            duration: 800,
        });

        // Navbar Blur Effect
        window.addEventListener('scroll', () => {
            const nav = document.getElementById('navbar');
            if (window.scrollY > 50) {
                nav.classList.add('shadow-md', 'py-2');
                nav.classList.remove('py-3');
            } else {
                nav.classList.remove('shadow-md', 'py-2');
                nav.classList.add('py-3');
            }
        });

        // --- CART LOGIC ---
        let cart = [];

        function addToCart(name, price) {
            // Cek apakah item sudah ada
            const existingItem = cart.find(item => item.name === name);
            if (existingItem) {
                existingItem.qty++;
            } else {
                cart.push({ name, price, qty: 1 });
            }
            updateCartUI();
            toggleCart(true); // Buka cart otomatis saat tambah
            
            // Efek getar cart badge
            const btn = document.getElementById('cart-count');
            btn.classList.remove('hidden');
        }

        function removeFromCart(index) {
            cart.splice(index, 1);
            updateCartUI();
        }

        function updateQty(index, change) {
            if (cart[index].qty + change > 0) {
                cart[index].qty += change;
            } else {
                cart.splice(index, 1);
            }
            updateCartUI();
        }

        function updateCartUI() {
            const cartItems = document.getElementById('cart-items');
            const cartTotal = document.getElementById('cart-total');
            const cartCount = document.getElementById('cart-count');
            
            // Update Count Badge
            const totalQty = cart.reduce((sum, item) => sum + item.qty, 0);
            cartCount.innerText = totalQty;
            if(totalQty > 0) cartCount.classList.remove('hidden');
            else cartCount.classList.add('hidden');

            // Render Items
            if (cart.length === 0) {
                cartItems.innerHTML = `
                <div class="h-full flex flex-col items-center justify-center text-gray-400">
                    <i class="fa-solid fa-basket-shopping text-6xl mb-4 text-gray-200"></i>
                    <p>Keranjang masih kosong</p>
                </div>`;
                cartTotal.innerText = "Rp 0";
            } else {
                let html = '';
                let total = 0;
                cart.forEach((item, index) => {
                    total += item.price * item.qty;
                    html += `
                    <div class="flex justify-between items-center mb-4 pb-4 border-b border-gray-100 last:border-0 animate-fade-in">
                        <div class="flex-1">
                            <h4 class="font-bold text-sm text-dark">${item.name}</h4>
                            <p class="text-xs text-primary font-semibold">Rp ${item.price.toLocaleString('id-ID')}</p>
                        </div>
                        <div class="flex items-center gap-3 bg-gray-100 rounded-lg p-1">
                            <button onclick="updateQty(${index}, -1)" class="w-6 h-6 flex items-center justify-center bg-white rounded text-xs shadow text-dark hover:text-primary"><i class="fa-solid fa-minus"></i></button>
                            <span class="text-sm font-bold w-4 text-center">${item.qty}</span>
                            <button onclick="updateQty(${index}, 1)" class="w-6 h-6 flex items-center justify-center bg-white rounded text-xs shadow text-dark hover:text-primary"><i class="fa-solid fa-plus"></i></button>
                        </div>
                        <button onclick="removeFromCart(${index})" class="ml-3 text-gray-400 hover:text-red-500 transition"><i class="fa-solid fa-trash-can"></i></button>
                    </div>
                    `;
                });
                cartItems.innerHTML = html;
                cartTotal.innerText = "Rp " + total.toLocaleString('id-ID');
            }
        }

        function toggleCart(forceOpen = false) {
            const modal = document.getElementById('cart-modal');
            const drawer = document.getElementById('cart-drawer');
            
            if (modal.classList.contains('hidden') || forceOpen === true) {
                modal.classList.remove('hidden');
                // Sedikit delay biar transisi jalan
                setTimeout(() => {
                    drawer.classList.remove('translate-x-full');
                }, 10);
            } else {
                drawer.classList.add('translate-x-full');
                setTimeout(() => {
                    modal.classList.add('hidden');
                }, 300);
            }
        }

        function checkoutWhatsApp() {
            if (cart.length === 0) {
                alert("Keranjang masih kosong nih, pilih menu dulu ya!");
                return;
            }

            const phone = "6282325670283";
            let message = "Halo Mie Ayam Raos! Saya mau pesan:%0A%0A";
            let total = 0;

            cart.forEach(item => {
                const subtotal = item.price * item.qty;
                total += subtotal;
                message += `- ${item.name} (${item.qty}x) : Rp ${subtotal.toLocaleString('id-ID')}%0A`;
            });

            message += `%0A*Total Bayar: Rp ${total.toLocaleString('id-ID')}*`;
            message += "%0A%0AMohon infonya untuk pembayaran dan pengiriman. Hatur nuhun!";

            window.open(`https://wa.me/${phone}?text=${message}`, '_blank');
        }
    </script>
</body>
</html>
